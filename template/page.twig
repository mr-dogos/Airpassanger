{% extends "template/main/template.twig" %}
{% block content %}
<div class="content-page">
    <main id="main" class="site-main uk-margin-bottom">
		<div class="uk-container uk-container-large">
			{% if role != 'Contributor' %}
			<!-- Yandex.RTB R-A-1708371-1 -->
			<div id="yandex_rtb_R-A-1708371-1"></div>
			<script>window.yaContextCb.push(()=>{
			  Ya.Context.AdvManager.render({
				renderTo: 'yandex_rtb_R-A-1708371-1',
				blockId: 'R-A-1708371-1'
			  })
			})</script>
			{% endif %}
			{% if leng == 'ru' and post.id != 2 %}
			<ul class="uk-breadcrumb uk-margin-bottom">
    			<li><a href="{{ function('site_url') }}">Главная</a></li>
    			<li><a>{{ post.title }}</a></li>
			</ul>
			{% elseif leng == 'en' and post.id != 2 %}
			<ul class="uk-breadcrumb uk-margin-bottom">
				<li><a href="{{ function('site_url') }}">Home</a></li>
    			<li><a>{{ post.meta('title_en') }}</a></li>
			</ul>
			{% endif %}
			{% if post.id == 2 %}
			{% if role != 'Contributor' %}
			{% if leng == 'ru' %}
			<h2 class="uk-heading-divider uk-margin-bottom">{{ info.title }}</h2>
			<div class="uk-card uk-card-default uk-margin-bottom uk-card-body content-list">
       			{{ info.content }}
			</div>
			{% else %}
			<h2 class="uk-heading-divider uk-margin-bottom">{{ info.meta('title_en') }}</h2>
			<div class="uk-card uk-card-default uk-margin-bottom uk-card-body content-list">
       			{{ info.meta('content_en') }}
			</div>
			{% endif %}
			{% endif %}
			<h2 class="uk-heading-divider uk-margin-bottom">{{ tile.title }}</h2>
			<div id="tile-card" class="uk-child-width-1-2 uk-child-width-1-3@l" uk-grid>
				{% for card in tile.cards %}
				<div>
					{% if card.free == 1 or role == 'Contributor' %}
					<a href="{{ card.url }}">
					<div class="uk-card uk-card-small uk-card-hover uk-card-default uk-text-center">
						<img class="bg-card" src="{{ card.icon }}" width="120" height="120" alt="{{ card.title }}" uk-img>
						<h3 class="title-cart">{{ card.title }}</h3>
					</div>
					</a>
					{% else %}
					<a href="#" class="disabled">
					<div class="uk-card uk-card-small uk-card-hover uk-card-default uk-text-center uk-disabled">
						<img class="bg-card" src="{{ card.icon }}" width="120" height="120" alt="{{ card.title }}" uk-img>
						<h3 class="title-cart">{{ card.title }}</h3>
					</div>
					</a>
					{% endif %}
				</div>
				{% endfor %}
			</div>
			{% else %}
			<div class="uk-card uk-card-default uk-card-body content-list">
				{% if leng == 'ru' %}
       			{{ post.content }}
				{% else %}
				{{ post.meta('content_en') }}
				{% endif %}
			</div>
			{% endif %}
		</div>
    </main>
</div>
{% endblock %}